%div.page-header
  %h1 Archive
%div
  = link_to('create task', new_task_path, class: 'btn btn-info btn-lg btn-block')
%div.list-group
  - @tasks.each do |task|
    %div.list-group-item
      %span.list-group-item-heading.lead
        = task.name
      %p.list-group-item-text
        = task.updated_at.strftime("%Y/%m/%d-%H:%M")
        done.
