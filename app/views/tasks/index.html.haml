- if current_user
  = react_component('PageTitle', props={title: 'My Task'},)
  %div
    %button#create-new-task.btn.btn-default.btn-lg.btn-block{data: {toggle: 'modal', target: '#task-modal'}}
      Create New Task
  %hr

  %div.list-group
    - @tasks.each do |task|
      = react_component('TaskCard', props={task: task,
        status: panel_class_status(task),
        cal_url: create_google_calendar_link(task),
        edit_url: edit_task_path(task.id)})

  = render partial: "form", locals: {zone: @zone}
