!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "todogrow"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "yeti", :media => "all"
    = yield(:page_stylesheet) if content_for?(:page_stylesheet)

  %body
    %header.navbar.navbar-default{role: "navigation"}
      %div.container
        %div.navbar-header
          %button.navbar-toggle{data: {toggle: 'collapse', target:'.navbar-responsive-collapse'}}
            %span.sr-only
              test1
            %span.icon-bar
              test2
            %span.icon-bar
              test3
          = link_to 'TodoGrow', root_path, class: 'navbar-brand'
        %div.navbar-collapse.collapse.navbar-responsive-collapse
          %ul.nav.navbar-nav
            %li
              = link_to 'MyTask', tasks_path
            %li
              = link_to 'Archive', closed_tasks_path
    %div.container
      - if flash[:notice]
        %div.alert.alert-success
          = flash[:notice]
      - if flash[:error]
        %div.alert.alert-danger
          = flash[:error]
      = yield

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "yeti"
    = yield(:page_javascript) if content_for?(:page_javascript)
